{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules"]
}
